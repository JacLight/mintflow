{
  "description": "Example chain that processes data through multiple plugins",
  "nodes": [
    {
      "id": "node1",
      "pluginId": "json",
      "action": "convert_text_to_json",
      "input": {
        "text": "{\"name\": \"Test User\", \"email\": \"test@example.com\", \"age\": 30, \"isActive\": true}"
      }
    },
    {
      "id": "node2",
      "pluginId": "data-bridge",
      "action": "advanced_mapping",
      "input": {
        "data": "{{node1.output}}",
        "mapping": {
          "fullName": "{{data.name}}",
          "contactEmail": "{{data.email}}",
          "userAge": "{{data.age}}",
          "status": "{{data.isActive ? 'Active' : 'Inactive'}}",
          "timestamp": "{{now}}"
        }
      }
    },
    {
      "id": "node3",
      "pluginId": "csv",
      "action": "json_to_csv",
      "input": {
        "data": "{{node2.output}}",
        "includeHeader": true
      }
    },
    {
      "id": "node4",
      "pluginId": "modify",
      "action": "transform",
      "input": {
        "data": "{{node3.output}}",
        "transformations": [
          {
            "operation": "append",
            "value": "\nThis is a test CSV file generated by the plugin testing framework."
          }
        ]
      }
    }
  ]
}
