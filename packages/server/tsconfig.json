{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node","jest"],
  },
  "references": [
    {
      "path": "../../packages/common"
    }
  ],
  "include": ["src"], 
  "exclude": ["node_modules"]
}
