# üåç Application Configuration
PORT=7001

# üõ¢Ô∏è Database Configuration
DB_PROVIDER=mongo        # Options: "mongo" or "postgres"

# MongoDB Configuration
MONGO_URI=mongodb://admin:admin@localhost:27017  # Add credentials if needed
DB_NAME=mintflow

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=mintflow
POSTGRES_URI=postgres://admin:admin@localhost:5432/mintflow  # Ensure no double colons "::"

# üöÄ Redis/KeyDB Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=             # Set password if required
REDIS_DB=0

# üß† Vector Database Configuration
VECTOR_DB_PROVIDER=weaviate  # Options: "weaviate", "pinecone", etc.

# Weaviate Configuration
WEAVIATE_HOST=http://localhost:8080
WEAVIATE_API_KEY=             # If authentication is enabled

# Pinecone Configuration (If using Pinecone)
PINECONE_API_KEY=YOUR_PINECONE_KEY
PINECONE_ENV=YOUR_PINECONE_ENV
PINECONE_INDEX=phd-index

# üîë Security & Authentication
JWT_SECRET=your_jwt_secret
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# üì° API Keys (if required)
# Note: Replace with your actual OpenAI API key to enable AI assistant functionality
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_SYSTEM_PROMPT=You are a helpful personal assistant for MintFlow users. Help them get things done efficiently.
GOOGLE_API_KEY=your_google_api_key

# üõ† Miscellaneous Config
LOG_LEVEL=debug  # Options: "debug", "info", "warn", "error"
NODE_ENV=development  # Options: "development", "production", "test"

# Socket.IO Configuration
SOCKET_AUTH_REQUIRED=false
SOCKET_PATH=/socket.io
SOCKET_CORS_ORIGIN=*
SOCKET_CORS_METHODS=GET,POST,PUT,DELETE
SOCKET_CORS_CREDENTIALS=false
